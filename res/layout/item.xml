<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    android:layout_margin="10dp"
    android:id="@+id/layout"
    android:orientation="horizontal"
    android:background="@color/purple_200"
    android:layout_height="60dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">





    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1.2">

    <TextView android:id="@+id/title_text_view"
        android:background="@color/purple_200"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_weight="3"
        android:textSize="18dp"
        android:textColor="@color/purple_500"/>

</LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1">

    <TextView
        android:layout_margin="2dp"
        android:id="@+id/time_text_view"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_weight="3"
        android:textSize="13dp" android:textColor="@android:color/darker_gray"/>

    <TextView android:layout_margin="2dp" android:id="@+id/date_text_view" android:layout_height="0dp" android:layout_width="match_parent" android:gravity="center" android:layout_weight="3" android:textSize="13dp"/>

</LinearLayout>

    <TextView android:id="@+id/delete_text_view" android:background="@color/teal_700" android:layout_height="30dp" android:layout_width="20dp" android:gravity="center"/>

</LinearLayout>